<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="40dp"
    android:background="@drawable/customviencam"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#FF9800"
        android:text="Sửa Loại Sản Phẩm " />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/vienthemanh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSuaLoai"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/baseline_add_24" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtSual"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customnonbackground"
        android:ems="10"
        android:inputType="text"
        android:hint="Nhập tên loại mới"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btSua"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF7A00"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Sửa" />

        <Button
            android:id="@+id/btbackl"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF7A00"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Quay Lại " />
    </LinearLayout>


</LinearLayout>